<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Forum</display-name>
  <servlet>
    <servlet-name>accueil</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.AccueilServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>accueil</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>profil</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.ProfilServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>profil</servlet-name>
    <url-pattern>/profil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>newTopic</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.NewTopicServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>newTopic</servlet-name>
    <url-pattern>/newTopic</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>thread</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.PageFil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>thread</servlet-name>
    <url-pattern>/thread</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>response</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.PageReponse</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>response</servlet-name>
    <url-pattern>/response</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>upload</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>supprimer</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.SupprimerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>supprimer</servlet-name>
    <url-pattern>/supprimer</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>FiltreApplicatif</filter-name>
    <filter-class>fr.acceis.forum.filter.FiltreMatrice</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltreApplicatif</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
  	<filter-name>FiltreCSRF</filter-name>
  	<filter-class>fr.acceis.forum.filter.FiltreCSRF</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>FiltreCSRF</filter-name>
  	<url-pattern>/response</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>FiltreCSRF</filter-name>
  	<url-pattern>/newTopic</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>FiltreCSRF</filter-name>
  	<url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>FiltreCSRF</filter-name>
  	<url-pattern>/register</url-pattern>
  </filter-mapping>
</web-app>